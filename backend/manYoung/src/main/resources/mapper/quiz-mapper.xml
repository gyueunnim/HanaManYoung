<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Quiz">
    <select id="getRandomQuiz" resultType="Quiz">
        SELECT *
        FROM hana.quiz
        WHERE quiz_id >= FLOOR(RAND() * (SELECT MAX(quiz_id) FROM hana.quiz))
            LIMIT 1;
    </select>
    <select id="getAllQuiz" resultType="Quiz">
        SELECT * FROM hana.quiz
    </select>
</mapper>